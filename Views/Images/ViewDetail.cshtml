@model ImageStore;
@{
    ViewData["Title"] = $"Image - {@Model.Id}";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body style="margin: 0;">
    <img src="data:image/jpg;base64,@Model.ImageDataAsBase64" id="image-view" style="">
    <script>
        let imageView = document.getElementById("image-view");
        let currentWidth = screen.width;
        let height = currentWidth * (9 / 16);
        imageView.setAttribute("style", `width:${currentWidth}px; height:${height}px`);
    </script>
</body>
</html>



